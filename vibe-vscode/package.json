{
  "name": "vl-cost-optimizer",
  "displayName": "VL AI Cost Optimizer",
  "description": "Cut your AI coding costs by 45% - Automatic token optimization for GitHub Copilot and AI assistants",
  "version": "0.2.0-alpha",
  "publisher": "vibe",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "copilot",
    "token-optimization",
    "cost-savings",
    "llm",
    "gpt",
    "claude"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "vl",
        "aliases": [
          "VL",
          "vibe"
        ],
        "extensions": [
          ".vl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vl",
        "scopeName": "source.vl",
        "path": "./syntaxes/vl.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "VL Cost Optimizer",
      "properties": {
        "vl.transparentMode.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable transparent VL optimization for AI requests"
        },
        "vl.transparentMode.languages": {
          "type": "array",
          "default": [
            "python",
            "javascript",
            "typescript"
          ],
          "description": "Languages to optimize (Python and JavaScript fully supported)"
        },
        "vl.analytics.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show token savings in status bar"
        },
        "vl.analytics.showNotifications": {
          "type": "boolean",
          "default": false,
          "description": "Show notifications when significant savings are achieved"
        },
        "vl.debug.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging to output channel"
        },
        "vl.debug.showVLCode": {
          "type": "boolean",
          "default": false,
          "description": "Show converted VL code in output channel"
        },
        "vl.compiler.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python interpreter (for VL converter)"
        }
      }
    },
    "commands": [
      {
        "command": "vl.showDashboard",
        "title": "VL: Show Cost Savings Dashboard",
        "category": "VL"
      },
      {
        "command": "vl.toggleTransparentMode",
        "title": "VL: Toggle Transparent Mode",
        "category": "VL"
      },
      {
        "command": "vl.resetStats",
        "title": "VL: Reset Statistics",
        "category": "VL"
      },
      {
        "command": "vl.convertToVL",
        "title": "VL: Convert Current File to VL",
        "category": "VL"
      },
      {
        "command": "vl.compileFromVL",
        "title": "VL: Compile VL to Target Language",
        "category": "VL"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.108.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "typescript": "^5.9.3"
  }
}
