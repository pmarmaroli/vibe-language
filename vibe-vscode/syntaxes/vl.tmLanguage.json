{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "VL",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.vl",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.vl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.vl",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.vl",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.vl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vl",
          "match": "\\b(if|for|while|ret|return|op|export|deps|meta|py|ffi)\\b"
        },
        {
          "name": "keyword.other.vl",
          "match": "\\b(fn|api|async|filter|map|parse|ui|state|props|on|render|data|groupby|agg|sort|file)\\b"
        },
        {
          "name": "keyword.declaration.vl",
          "match": "\\b(v|i|o):"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.vl",
          "match": "\\b(int|float|str|bool|arr|obj|map|set|any|void|promise|func)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.vl",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "constant.language.boolean.vl",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.vl",
          "match": "\\+|\\-|\\*|\\/|%|==|!=|<|>|<=|>=|&&|\\|\\||!|=|\\+=|\\-=|\\*=|\\/=|\\.\\.|\\?|\\$"
        },
        {
          "name": "punctuation.separator.vl",
          "match": "\\||:|,"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.vl",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\()"
        },
        {
          "name": "keyword.control.fn-call.vl",
          "match": "@([a-zA-Z_][a-zA-Z0-9_]*)"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.vl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.vl"
}
